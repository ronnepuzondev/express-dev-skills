<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ronne Puzon's Dev Skills</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <a href="/">Home</a>
    <h1>Ronne Puzon's Dev Skills</h1>
    <ul>
      <% skills.forEach(function(t) { %>
      <li>
        <a href="/skills/<%= t.id %>"><%= t.skill %></a>
        <form
          action="/skills/<%= t.id %>?_method=DELETE"
          class="delete-form"
          method="POST"
        >
          <button type="submit">X</button>
        </form>
      </li>
      <% }); %>
    </ul>
    <a href="/skills/new">Add New Skill</a>
  </body>
</html>
